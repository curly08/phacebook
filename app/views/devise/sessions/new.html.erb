<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <div class="field">
      <div class="control">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { class: "input", autocomplete: "email" },
                    label_html: { class: "label" },
                    wrapper: false %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <%= f.input :password,
                    required: false,
                    input_html: { class: "input", autocomplete: "current-password" },
                    label_html: { class: "label" },
                    wrapper: false %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <%= f.input :remember_me,
                    label_html: { class: "checkbox" },
                    wrapper: false,
                    as: :boolean if devise_mapping.rememberable? %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <div class="control">
      <div class="field"><%= f.button :submit, "Log in", class: "button is-info" %></div>
    </div>
  </div>

  <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, method: :post, class: 'button is-link' %>
<% end %>

<%= render "devise/shared/links" %>
