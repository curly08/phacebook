<div class="content">
  <h1 class="title is-3"><%= current_user.name %></h1>
  <figure class="image is-128x128">
    <%= image_tag @user.gravatar_url, class: 'is-rounded'%>
  </figure>
  <strong>Bio:</strong>
  <p><%= @user.bio %></p>
  <strong>Birthday:</strong>
  <p><%= @user.birthday %></p>
  <strong>Email:</strong>
  <p><%= @user.email %></p>
  <strong>Favourite Colour:</strong>
  <p><%= @user.color %></p>
  <strong>Favourite Animal:</strong>
  <p><%= @user.animal %></p>
  <strong>Favourite Food:</strong>
  <p><%= @user.food %></p>
</div>
