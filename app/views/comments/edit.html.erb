<section class="section">
  <h1 class="title">Edit Comment</h1>
  <%= simple_form_for @comment, url: post_comment_path(@post, @comment) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  
    <div class="form-inputs field">
      <div class="control">
        <%= f.input :body, input_html: { class: "textarea", cols: 60 }, wrapper: false, label_html: {class: "label"} %>
      </div>
    </div>
  
    <div class="form-actions field">
      <div class="control">
        <div class="buttons">
          <%= f.button :submit, class: "button is-info" %>
          <%= link_to 'Cancel', @post, class: 'button is-light' %>
        </div>
      </div>
    </div>
  <% end %>
</section>
