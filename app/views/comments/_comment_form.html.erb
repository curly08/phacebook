<%= simple_form_for @comment, url: post_comments_path(@post) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs field">
    <div class="control">
      <%= f.input :body, input_html: { class: "textarea"}, wrapper: false, label: false, placeholder: 'Add a comment...' %>
    </div>
  </div>

  <div class="form-actions field">
    <div class="control">
      <%= f.button :submit, 'Post Comment', class: "button" %>
    </div>
  </div>
<% end %>
